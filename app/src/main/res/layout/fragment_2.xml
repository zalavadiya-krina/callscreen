<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Fragment.Fragment2">
    <ImageView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/right" />
    <ImageView
        android:id="@+id/introimg2"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginEnd="112dp"
        android:background="@drawable/intro2" />

    <TextView
        android:id="@+id/introtext11"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_40sdp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Neon Unleashed"
        android:fontFamily="@font/poppinsregular"
        android:layout_below="@id/introimg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/introtext22"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_30sdp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="Experience the cityscape like never\n before with our neon-infused\napp"
        android:fontFamily="@font/poppinsregular"
        android:layout_below="@id/introtext11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>